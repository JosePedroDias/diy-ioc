{
    // https://www.typescriptlang.org/docs/handbook/tsconfig-json.html
    // https://www.typescriptlang.org/tsconfig
    "compilerOptions": {
        "module": "ES2022",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "ES2020",
        "lib": ["ES2022", "DOM"],
        "declaration": true,
        "outDir": "dist"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
